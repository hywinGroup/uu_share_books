body{
	font-size:32rpx;
}
.tCenter {
	text-align:center;
}
.tLeft {
	text-align:left;
}
.tRight {
	text-align:right;
}
.content{
	margin-left:30rpx;
	margin-right:30rpx;
}
.oprate {
	color:#247ae4;
}
.oprate-hover{
	color:#5695e2;
}

.search-book{
	position:relative;
	height:110rpx;
}
.search-book input{
  border:solid 1px #ccc;
  width:80%;
  height:60rpx;
  margin-left:10%;
  position: absolute;
  top:25rpx;
  border-radius:10rpx;
  padding-left:10rpx;
  font-size:30rpx;
}
.search-book label{
	position:absolute;
	top:25rpx;
	font-size:32rpx;
	right:10%;
	color:#666;
	height:60rpx;
	line-height:60rpx;
	width:100rpx;
	text-align:center;
}

.books-container{
	display:flex;
	width:90%;
	margin-left:5%;
	flex-wrap:wrap;
	justify-content: space-between;
}
.books-container .book{
	width:200rpx;
	height:240rpx;
	margin-top:10rpx;
}
.books-container .book image{
	width:100%;
	height:100%;
}
